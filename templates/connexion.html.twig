{% extends 'base.html.twig' %}
{% block content %}
<div class="corps">
  <div class="bloc_texte">
    <div class="container">
      <div class="row justify-content-around">
        <div class="col-4">
          {% autoescape false %}{{ status["display_button_deconnexion"] }}{% endautoescape %}
          <p class="title_connexion">Se connecter</p>
          {% autoescape false %} {{ status["connexion_ok"]}} {{ status["already_connected"] }}{% endautoescape %}
